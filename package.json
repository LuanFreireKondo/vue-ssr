{
  "name": "vue-ssr",
  "version": "1.0.0",
  "description": "Simple template using Vue.js + SSR",
  "author": "Luan F. Kondo, <luanfreirekondo@gmail.com>",
  "license": "ISC",
  "scripts": {
    "start": "npm install && npm run build-dev && node server.js",
    "build-dev": "npm run build:client && npm run build:server",
    "build-prod": "cross-env NODE_ENV=production build:client && cross-env NODE_ENV=production build:server",
    "build:client": "webpack --config ./build/client.config.js",
    "build:server": "webpack --config ./build/server.config.js"
  },
  "devDependencies": {
    "axios": "^0.18.0",
    "css-loader": "^0.28.10",
    "node-sass": "^4.5.3",
    "sass-loader": "^6.0.6",
    "webpack-node-externals": "^1.7.2"
  },
  "dependencies": {
    "cross-env": "^5.1.3",
    "express": "^4.16.3",
    "vue": "^2.5.16",
    "vue-loader": "^14.1.1",
    "vue-router": "^3.0.1",
    "vue-server-renderer": "^2.5.16",
    "vue-template-compiler": "^2.5.16",
    "vuex": "^3.0.1",
    "vuex-router-sync": "^5.0.0",
    "webpack": "^3.10.0",
    "webpack-merge": "^4.1.3"
  }
}
