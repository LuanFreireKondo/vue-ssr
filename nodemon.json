{
  "restartable": "rs",
  "ignore": [
    ".git",
    "node_modules/**/node_modules",
    "dist",
    "static"
  ],
  "verbose": true,
  "execMap": {
    "js": "node"
  },
  "runOnChangeOnly": false,
  "watch": [
    "src/**/*.js",
    "src/**/*.vue",
    "src/**/*.scss"
  ],
  "env": {
    "NODE_ENV": "development"
  },
  "ext": "js, vue, scss"
}